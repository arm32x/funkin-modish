{
    "$schema": "http://json-schema.org/draft-07/schema",
    "title": "Modish Menu Character",
    "description": "Defines characters seen on the story mode menu.",
    "type": "object",
    "properties": {
        "version": {
            "type": "integer",
            "const": 2
        },
        "prefix": {
            "type": "string"
        },
        "indices": {
            "type": "array",
            "items": {
                "type": "integer"
            }
        },
        "postfix": {
            "type": "string"
        },
        "frameRate": {
            "type": "integer"
        },
        "looped": {
            "type": "boolean"
        },
        "x": {
            "type": "integer"
        },
        "y": {
            "type": "integer"
        },
        "width": {
            "type": "integer"
        },
        "height": {
            "type": "integer"
        },
        "scale": {
            "type": "number"
        },
        "flipped": {
            "type": "boolean"
        }
    },
    "required": [ "version", "prefix" ],
    "dependencies": {
        "postfix": [ "indices" ]
    }
}
