{
    "$schema": "http://json-schema.org/draft-07/schema",
    "title": "Modish Note Skin",
    "description": "Defines the appeareance of a note.",
    "type": "object",
    "properties": {
        "scale": {
            "type": "array",
            "description": "The horizontal and vertical scale of the note.",
            "default": [1, 1],
            "minItems": 2,
            "maxItems": 2,
            "items": {
                "type": "number",
                "minimum": 0
            }
        },
        "antialiasing": {
            "type": "boolean",
            "description": "Whether the note has antialiasing.",
            "default": true
        }
    },
    "allOf": [
        {
            "$ref": "animation-set.schema.json"
        }
    ]
}
