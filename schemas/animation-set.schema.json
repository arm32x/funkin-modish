{
    "$schema": "http://json-schema.org/draft-07/schema",
    "title": "Modish Animation Set",
    "description": "Describes how the animations in a spritesheet should be loaded and played.",
    "type": "object",
    "properties": {
        "animations": {
            "type": "array",
            "description": "The animations in this animation set.",
            "items": {
                "type": "object",
                "properties": {
                    "name": {
                        "type": "string",
                        "description": "The name of the animation."
                    },
                    "prefix": {
                        "type": "string"
                    },
                    "indices": {
                        "type": "array",
                        "items": {
                            "type": "integer"
                        }
                    },
                    "postfix": {
                        "type": "string"
                    },
                    "frameRate": {
                        "type": "integer",
                        "description": "The frame rate of the animation.",
                        "default": 30
                    },
                    "looped": {
                        "type": "boolean",
                        "description": "Whether this animation loops.",
                        "default": false
                    },
                    "offset": {
                        "type": "array",
                        "description": "The amount to offset the sprite by while playing this animation.",
                        "default": [0.0, 0.0],
                        "minItems": 2,
                        "maxItems": 2,
                        "items": {
                            "type": "number"
                        }
                    },
                    "priority": {
                        "type": ["integer", "null"],
                        "description": "Higher priority animations will not get interrupted by lower priority ones.",
                        "default": 0
                    }
                },
                "required": ["name"],
                "anyOf": [
                    {
                        "required": ["prefix"]
                    },
                    {
                        "required": ["indices"]
                    }
                ],
                "dependencies": {
                    "postfix": ["prefix", "indices"]
                }
            }
        },
        "startingAnimation": {
            "description": "The animation to play after initialization.",
            "type": "object",
            "properties": {
                "name": {
                    "type": "string",
                    "description": "The name of the animation to play."
                },
                "force": {
                    "type": "boolean",
                    "description": "Whether to restart the animation if it is already playing.",
                    "default": false
                },
                "reversed": {
                    "type": "boolean",
                    "description": "Whether to play the animation in reverse.",
                    "default": false
                },
                "frame": {
                    "type": "integer",
                    "description": "The frame the animation will start playing at.",
                    "default": 0
                }
            },
            "required": ["name"]
        }
    }
}
