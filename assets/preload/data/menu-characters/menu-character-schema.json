{
    "$schema": "http://json-schema.org/draft-07/schema",
    "title": "FNF Modish Menu Character",
    "description": "Defines characters seen on the story mode menu in the Friday Night Funkin' mod loader Modish.",
    "type": "object",
    "properties": {
        "type": {
            "type": "string",
            "enum": [ "sparrow", "packer" ]
        },
        "atlas": {
            "type": "string"
        },
        "prefix": {
            "type": "string"
        },
        "indices": {
            "type": "array",
            "items": {
                "type": "integer"
            }
        },
        "postfix": {
            "type": "string"
        },
        "frameRate": {
            "type": "integer"
        },
        "looped": {
            "type": "boolean"
        },
        "x": {
            "type": "integer"
        },
        "y": {
            "type": "integer"
        },
        "scale": {
            "type": "number"
        },
        "flipped": {
            "type": "boolean"
        }
    },
    "required": [ "type", "atlas", "prefix" ]
}